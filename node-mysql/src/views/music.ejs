<!--create lesson modal-->
<div class="modal fade" id="lessonModal" tabindex="-1" role="dialog" aria-labelledby="lessonModalLabel"
aria-hidden="true">
<form action="/mslessons" method="post">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="lessonModalLabel">Create New Lesson</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="lessonForm">
            <div class="form-row">
                <div class="form-group col">
                    <label for="instructorName">Instructor Name:</label>
                    <input type="text" class="form-control" name="iname" id="instructorName" required>
                </div>
                <div class="form-group col">
                    <label for="instructorSurname">Instructor Surname:</label>
                    <input type="text" class="form-control" name="isurname" id="instructorSurname" required>
                </div>
            </div>

            <div class="form-group">
              <label for="instructorNumber">Instructor Number:</label>
              <input type="text" class="form-control" name="inumber" id="instructorNumber" required>
            </div>

              <div class="form-group">
                <label for="instructorGraduation">Instructor Graduation:</label>
                <input type="text" class="form-control" name="igraduation" id="instructorGraduation" required>
              </div>

              <div class="form-group">
                <label for="instructorExperience">Experience:</label>
                <input type="text" class="form-control" name="iexperience" id="instructorExperience" required>
              </div>

          <div class="form-group">
            <label for="lessonName">Lesson Name:</label>
            <input type="text" class="form-control" name="name" id="lessonName" required>
          </div>

          <div class="form-group">
            <label for="lessonDescribe">Lesson Describe:</label>
            <textarea class="form-control" id="describe" name="lessonDescription" rows="3"></textarea>
          </div>

          <div class="form-group">
            <label for="lessonType">Lesson Type:</label>
            <select class="form-control" id="type" name="lessonType" required>
              <option value="Software">Software</option>
              <option value="Sport">Sport</option>
              <option value="Marketing">Marketing</option>
              <option value="Music">Music</option>
            </select>
          </div>


          <div class="form-group">
            <label for="lessonImage">Lesson Image URL:</label>
            <input type="text" class="form-control-file" name="image" id="lessonImage">
          </div>

          <div class="form-group">
            <label for="lessonPrice">Lesson Price:</label>
            <input type="text" class="form-control" name="lessonPrice" id="lessonPrice" required>
          </div>

          <button type="submit" class="btn btn-primary">Create</button>
        </form>
      </div>
    </div>
  </div>
</form>
